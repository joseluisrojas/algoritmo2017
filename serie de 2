#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"

using namespace std;

void main()
{ int N, S, i;

  do
   { cout<< "ingrese en numero a calcular: ";
     cin>> N;
     cout<< endl;
   } while (N <= 0);

  S = 0;
  for( i=2; i<=N; i=i+2 )
    { S = S + i;
    }

  cout<< "el resultado de la serie es: ";
  cout<< S;
  cout<< endl;

  getch();

}

